<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalexam.coinstackgame">

    <application
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation|screenSize"
        android:icon="@drawable/coin"
        android:label="@string/app_name"
        android:roundIcon="@drawable/coin"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <service
            android:name=".TitleMusicService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".StageMusicService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".NormalModeActivity" />
        <activity android:name=".NormalModeActivityIntent" />
        <activity android:name=".InfinityModeActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>